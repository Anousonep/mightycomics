{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des utilisateurs</h1>

        <a href="#" class="btn btn-primary mb-5"><i class="fas fa-plus">&nbsp;</i>Ajouter un nouvel utilisateur</a>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th class="text-center">Email</th>
                <th class="text-center">Role</th>
                <th class="text-center">Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <td class="">
                        {{ user.id }}
                    </td>
                    <td>
                        <span class="">
                            {{ user.firstname }}
                        </span>
                    </td>
                    <td>
                        <span class="">
                            {{ user.lastname }}
                        </span>
                    </td>
                    <td class="text-center">
                        <span class="">
                            {{ user.email }}
                        </span>
                    </td>
                    <td class="text-center">
                        <span class="">

                        </span>
                    </td>
                    <td>
                        <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="{{ path('admin_users_delete', {'id': user.id}) }}" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="d-flex justify-content-center my-5">
            <ul class="pagination">
                <li class="page-item {% if page == 1 %}disabled{% endif %}">
                    <a class="page-link" href="{{path('admin_users_index', {'page': page - 1})}}">&laquo;</a>
                </li>

                {% for i in 1..pages %}
                    <li class="page-item {% if page == i %}active{% endif %}">
                        <a class="page-link" href="{{ path('admin_users_index', {'page': i}) }}">{{ i }}</a>
                    </li>
                {% endfor %}

                <li class="page-item {% if page == pages %}disabled{% endif %}">
                    <a class="page-link" href="{{ path('admin_users_index', {'page': page + 1}) }}">&raquo;</a>
                </li>
            </ul>
        </div>

    </div>
{% endblock %}