    <body>
        <div class="col-md-4">
            <div class="card bg-secondary">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="fas fa-lock"></i>
                        Connexion à l'administration
                    </h4>
                </div>
                <div class="card-body">
                    {% if hasError %}
                        <div class="alert alert-danger">
                            <p>Les informations fournies sont erronées!</p>
                        </div>
                    {% endif %}
                    <form method="post">

                        <div class="form-group">
                            <label for="_username">Email</label>
                            <input type="text" class="form-control" placeholder="Adresse email..." name="_username" value="{{ username }}">
                        </div>

                        <div class="form-group">
                            <label for="_password">Mot de passe</label>
                            <input type="password" class="form-control" placeholder="Mot de passe..." name="_password">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-lock-open"></i>
                                Connexion!
                            </button>
                            <a href="{{ path('homepage') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-circle-left"></i>
                                Retour au site
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </body>
