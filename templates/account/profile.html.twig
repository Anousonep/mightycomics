{% extends 'base.html.twig' %}

{% block title %}
    Modification du profil
{% endblock %}

{% block body %}
    <div class="container">
        <h4 class="mt-4">Modification du profil</h4>
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-dark py-3 px-3 mt-5">

                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications!</button>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}