{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-dark py-3 px-3 mt-5">
                    <h1>Connectez-vous!</h1>

                    {% if hasError %}
                        <div class="alert alert-danger">
                            Une erreur est survenue. L'identifiant ou le mot de passe est incorrect.
                        </div>
                    {% endif %}

                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group">
                            <label for="email">Identifiant</label>
                            <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email..." required value="{{ username }}">
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe..." required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Connexion!</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
